<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".OrderDetailActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/detailOrderActionButton"
                android:id="@+id/detailOrderActionAceptReject" android:background="@color/Tale">
            <Button
                    android:text="@string/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/detailOrderActionAceptOrder"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" android:textColor="@color/white"/>
            <Button
                    android:text="@string/denied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/detailOrderActionRejectOrder"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" android:textColor="@color/white"/>
        </LinearLayout>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white" android:background="@color/Tale"
                android:id="@+id/detailOrderActionButton"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/detailOrderDelivery"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp" app:srcCompat="@drawable/mirelex_logo_cian"
                android:id="@+id/detailOrderFeaturedImage" android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/detailOrderGoToStoreProfile"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/detailOrderFeaturedImage">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_shadow_radius="10"
                    android:id="@+id/detailOrderOwnerImage"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/mirelex_logo_cian"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:text="storeName" android:textAlignment="viewStart"
                    android:gravity="center_vertical" android:id="@+id/detailOrderOwnerName"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/chevron_right"
                    android:id="@+id/imageView5" android:layout_weight="0" android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/detailOrderGoToProduct"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/detailOrderGoToStoreProfile">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_shadow_radius="10"
                    android:id="@+id/detailOrderProductImage"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/mirelex_logo_cian"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:text="productName" android:textAlignment="viewStart"
                    android:gravity="center_vertical" android:id="@+id/detailOrderProductName"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/chevron_right"
                    android:id="@+id/imageView6" android:layout_weight="0" android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/detailOrderInfo"
                app:layout_constraintTop_toBottomOf="@+id/detailOrderGoToProduct" android:layout_marginTop="16dp"
        >
        </LinearLayout>
        <CheckBox
                android:text="@string/delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/detailOrderDelivery" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:buttonTint="@color/cyan"
                android:focusable="false" app:layout_constraintTop_toBottomOf="@+id/detailOrderInfo"
                android:layout_marginTop="16dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>