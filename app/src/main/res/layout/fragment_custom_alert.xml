<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.BlankFragment" android:background="#99000000">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white" tools:layout_editor_absoluteY="131dp">

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:src="@drawable/mirelex_logo_cian"
                app:srcCompat="@drawable/mirelex_logo" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alertTitle" android:layout_weight="1"
                android:textAlignment="center" tools:text="Title" android:textStyle="bold" android:textSize="24sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alertDescription" android:layout_weight="3"
                android:textAlignment="center" tools:text="Description" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
    </LinearLayout>
</FrameLayout>