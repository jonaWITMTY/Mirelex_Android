<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white" app:layout_constraintTop_toTopOf="parent"
    >

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mirelex_logo" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alertTitle" android:layout_weight="1"
                android:textAlignment="center" tools:text="Title" android:textStyle="bold" android:textSize="24sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/alertDescription" android:layout_weight="3"
                android:textAlignment="center" tools:text="Description" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/btnSubmit" android:layout_weight="0"
                android:textColor="@android:color/black" android:background="@drawable/border"
                android:textSize="10sp" android:text="@string/confirm"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>