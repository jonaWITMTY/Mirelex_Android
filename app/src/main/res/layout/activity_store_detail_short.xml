<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StoreDetailShortActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="230dp" app:srcCompat="@drawable/mirelex_logo_cian"
                android:id="@+id/storeDetailShortImageView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/storeDetailShortImageView">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/storeDetailShortName"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textSize="16sp"
                    android:textColor="@android:color/black" tools:text="storeName" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" android:id="@+id/view"
                    android:background="@color/colorLightGray"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    android:text="@string/sendMessage" android:id="@+id/storeDetailShortOpenChat"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" android:id="@+id/view5"
                    android:background="@color/colorLightGray"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/storeDetailShortEmail"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    tools:text="storeEMail"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/storeDetailShortPhone"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    tools:text="storePhone"/>
            <TextView
                    android:text="@string/followUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/storeDetailShortSocialTitle" android:paddingStart="16dp"
                    android:paddingEnd="16dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:background="@color/colorLightGray" android:textSize="16sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/storeDetailShortFacebook">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" app:srcCompat="@drawable/facebook"
                        android:id="@+id/imageView21" android:layout_weight="0" android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp" android:layout_marginEnd="16dp"
                        android:text="@string/facebook"
                        android:paddingTop="10dp" android:paddingBottom="10dp" android:textColor="@color/black"
                        android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/storeDetailShortInstagram">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" app:srcCompat="@drawable/instagram"
                        android:id="@+id/imageView22" android:layout_weight="0" android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"/>
                <TextView
                        android:text="@string/instagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp" android:layout_marginEnd="16dp" android:paddingTop="10dp"
                        android:paddingBottom="10dp" android:textColor="@color/black" android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>