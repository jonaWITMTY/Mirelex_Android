<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.Profile" android:background="@color/colorLightGray">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </ScrollView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/sessionUserProfile"
                android:background="@android:color/white" android:paddingTop="20dp" android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp">
            <ImageView
                    android:src="@drawable/mirelex_logo_cian"
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/imageView10" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/sessionUserName"
                        android:textColor="@android:color/black" tools:text="sessionUserName"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/sessionUserEmail"
                        tools:text="sessionUserEmail" android:textColor="@android:color/black" android:textSize="12sp"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>
            <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" android:id="@+id/imageView11" android:layout_weight="0"
                    android:layout_marginTop="16dp" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@android:color/white"
                      android:id="@+id/linearLayout6"
                      android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/sessionUserProfile">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
                    android:background="@drawable/border_bottom" android:id="@+id/sessionUserPayments">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:gravity="fill_vertical" android:text="@string/paymentMethods"
                        android:textColor="@android:color/black" android:textSize="14sp"
                        android:layout_marginLeft="20dp"/>

                <ImageView
                        android:src="@drawable/credit_card"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imageView16" android:layout_weight="0"
                        android:layout_marginRight="40dp"/>
                <ImageView
                        android:src="@drawable/chevron_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
                    android:background="@drawable/border_bottom" android:id="@+id/sessionUserProducts">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  android:layout_weight="1"
                        android:gravity="fill_vertical" android:text="@string/products"
                        android:textColor="@android:color/black" android:textSize="14sp"
                        android:layout_marginLeft="20dp"/>
                <ImageView
                        android:src="@drawable/chevron_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
                    android:background="@drawable/border_bottom" android:id="@+id/sessionUserMessages">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                        android:gravity="fill_vertical" android:text="@string/messages"
                        android:textColor="@android:color/black" android:textSize="14sp"
                        android:layout_marginLeft="20dp"/>
                <ImageView
                        android:src="@drawable/chat"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imageView9" android:layout_weight="0"
                        android:layout_marginRight="40dp" android:layout_marginTop="1dp"/>
                <ImageView
                        android:src="@drawable/chevron_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imageView8" android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
                    android:background="@drawable/border_bottom" android:id="@+id/sessionUserContact">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:gravity="fill_vertical" android:text="@string/contact"
                        android:textColor="@android:color/black" android:textSize="14sp"
                        android:layout_marginLeft="20dp"/>
                <ImageView
                        android:src="@drawable/envelope"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:layout_weight="0"
                        android:layout_marginRight="40dp" android:layout_marginTop="1dp"/>
                <ImageView
                        android:src="@drawable/chevron_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:layout_marginTop="1dp" android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
                    android:background="@drawable/border_bottom" android:id="@+id/sessionUserTerms">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:gravity="fill_vertical"
                        android:textColor="@android:color/black" android:textSize="14sp"
                        android:layout_marginLeft="20dp" android:text="@string/termsAndConditions"/>
                <ImageView
                        android:src="@drawable/chevron_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:layout_marginTop="1dp" android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/sessionUserLogout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:background="@android:color/holo_red_light"
                android:textColor="@android:color/white" app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                android:layout_marginTop="30dp" android:text="@string/closeSession"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>