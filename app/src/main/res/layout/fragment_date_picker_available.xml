<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.Utils.DatePickerAvailable"
             android:background="@android:color/white" android:clickable="true" android:elevation="100dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView23"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
                android:textColor="@color/black" android:textSize="20sp"/>
        <CalendarView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/datePickerSelection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
                android:theme="@style/customCalendarView" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/textView23"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>