<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardExample" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/productAdapterName"
                    android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/productAdapaterImage"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp" android:textStyle="bold" android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                    android:textColor="@color/black"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:id="@+id/productAdapaterImage" android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/productAdapterName"
                    app:srcCompat="@drawable/mirelex_logo_cian"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productadapterPrice" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="110dp"
                    app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorBlue"
                    android:textStyle="bold" tools:text="productPrice"
                    android:padding="3dp"
                    android:backgroundTint="@color/colorDarkTextOpacity80"
                    android:background="@drawable/radius_corner" android:layout_marginEnd="5dp"
                    android:textSize="12sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>