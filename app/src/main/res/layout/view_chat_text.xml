<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp" app:cardBackgroundColor="@color/colorLightGray"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/viewChatText"
                android:layout_margin="6dp" tools:text="messageText"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp" android:textColor="@color/black" tools:text="messageDate"
            android:id="@+id/viewChatDate" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
</LinearLayout>