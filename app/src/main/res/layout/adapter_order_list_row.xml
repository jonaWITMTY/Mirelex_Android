<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
            app:layout_constraintCircleRadius="20dp" app:cardCornerRadius="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                <Button
                        android:layout_width="60dp"
                        android:layout_height="20dp" android:id="@+id/orderAdapterOrderType"
                        android:layout_weight="0" android:contentDescription="orderType" android:textSize="8sp"
                        tools:text="orderType" android:background="@color/colorLightRed"
                        android:textAllCaps="false" android:textColor="@color/white"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp" app:srcCompat="@drawable/mirelex_logo_cian"
                        android:id="@+id/orderAdapterFeaturedImage" android:layout_weight="0"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/orderAdapterBrand"
                        tools:text="brand" android:textSize="13sp"
                        android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="1"
                        android:layout_marginLeft="10dp" android:layout_marginBottom="16dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="0"
                        android:layout_marginBottom="10dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/orderAdapterFolio"
                            android:layout_weight="1"
                            android:gravity="center_vertical" tools:text="folio"
                            android:textColor="@android:color/black"
                            android:textSize="11dp" android:layout_marginLeft="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/orderAdapterPrice"
                            android:layout_weight="0"
                            android:gravity="center_vertical" tools:text="price" android:textColor="@color/Tale"
                            android:textSize="11dp" android:paddingEnd="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/orderAdapterStartDate"
                            android:layout_weight="1" tools:text="startDate"
                            android:textSize="11dp" android:textColor="@android:color/black"
                            android:layout_marginLeft="10dp" android:gravity="center_vertical"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" android:id="@+id/orderAdapterStatus"
                            android:layout_weight="0" android:contentDescription="orderType" android:textSize="10sp"
                            tools:text="orderType"
                            android:textAllCaps="false" android:backgroundTint="@color/colorBlue"
                            android:layout_marginEnd="4dp" android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>